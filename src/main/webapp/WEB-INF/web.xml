<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <filter>
        <description>Redirect to CAS if authentication is required.</description>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>org.jasig.cas.client.authentication.AuthenticationFilter</filter-class>
        <init-param>
            <param-name>casServerLoginUrl</param-name>
            <param-value>https://cas.iu.edu/cas/login</param-value>
        </init-param>
        <init-param>
            <description>This host's name</description>
            <param-name>serverName</param-name>
            <param-value>mhw.ulib.iupui.edu</param-value>
        </init-param>
    </filter>
    <filter>
        <description>Validate tickets</description>
        <filter-name>TicketValidationFilter</filter-name>
        <filter-class>org.jasig.cas.client.validation.Cas20ProxyReceivingTicketValidationFilter</filter-class>
        <init-param>
            <description>Root of the CAS server URL space</description>
            <param-name>casServerUrlPrefix</param-name>
            <param-value>https://cas.iu.edu/cas</param-value>
        </init-param>
        <init-param>
            <description>This host's name</description>
            <param-name>serverName</param-name>
            <param-value>mhw.ulib.iupui.edu</param-value>
        </init-param>
    </filter>
    <filter>
        <description>Feed getRemoteUser and getPrincipal</description>
        <filter-name>CASRequestWrapper</filter-name>
        <filter-class>org.jasig.cas.client.util.HttpServletRequestWrapperFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>TicketValidationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CASRequestWrapper</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jspx</welcome-file>
    </welcome-file-list>
</web-app>
